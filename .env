# =====================================================
# üåç Environment Configuration for RAG Chat Storage
# =====================================================

# -------------------------------
# Application Environment
# -------------------------------
APP_ENV=dev

# -------------------------------
# API Gateway Security
# -------------------------------
GATEWAY_API_KEY=secret-key

# -------------------------------
# Oracle Database Configuration
# -------------------------------
SPRING_DATASOURCE_URL=jdbc:oracle:thin:@//oracle-xe:1521/XE
SPRING_DATASOURCE_USERNAME=raguser
SPRING_DATASOURCE_PASSWORD=ragpass
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.OracleDialect

# -------------------------------
# Ports
# -------------------------------
SESSION_SERVICE_PORT=8081
MESSAGE_SERVICE_PORT=8082
GATEWAY_SERVICE_PORT=8080

# -------------------------------
# Logging Configuration
# -------------------------------
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_RAG=DEBUG

# -------------------------------
# Rate Limiting (Future Feature)
# -------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -------------------------------
# CORS (Future Feature)
# -------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000

# -------------------------------
# Actuator Health
# -------------------------------
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
